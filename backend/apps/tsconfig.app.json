{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist/out-tsc",
        "module": "commonjs",
        "types": ["node", "express"],
        "composite": true,
        "declaration": true,
        "strictNullChecks": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "src/**/*.d.ts"]
}
